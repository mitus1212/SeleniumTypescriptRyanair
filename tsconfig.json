{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "types": ["selenium-webdriver"],
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*.ts", "features/**/*.feature"],
  "exclude": ["node_modules"]
}
